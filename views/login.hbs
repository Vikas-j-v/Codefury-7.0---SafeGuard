<body>
    <div
        class="container flex flex-col justify-center  items-center h-[100vh] w-full">
        
        <div class="form min-h-[60vh] w-[45vh]  p-10 text-white flex flex-col justify-center items-center">
             {{!-- <div class="bg-white h-[0.5px] w-auto"></div> --}}
            <h1 class="text-blue-450  rounded-lg px-16 py-2 text-4xl mx-auto mb-4 mt-3 font-semibold ">
                Login
            </h1>
            {{!-- <div class="bg-white h-[1px] w-auto"></div> --}}
            <form action="/login" method="post" class ="flex flex-col space-y-9 justify-center items-center space-y-2 h-auto " >
                <p class="mx-auto text-red-600">{{content}}</p>
                <div class="input-container">
                <input type="text" required name="name" class="border-[1px] px-4 rounded-lg bg-transparent input p-1 ">
                <label for="Username" class="mt-4 label  font-semibold text-2xl">Username</label>
                </div>
                <div class="input-container">
                <input type="password" required name="password" class="border-[1px] px-4 rounded-lg bg-transparent input p-1 ">
                <label for="Password" class="mt-4 label  font-semibold text-2xl">Password</label>
                </div>
                {{!-- <label for="" class="mt-4 text-2xl">Password</label>
                <input type="password" required name="password" placeholder="Password" class="border-1 px-4 rounded-lg bg-transparent mt-2 p-1 w-56"> --}}
                <button type="submit" 
                    class=" text-white rounded-lg bg-blue-900 hover:bg-blue-950  px-10 border-blue-700 py-1 mx-auto  font-semibold">Log in</button>
            </form>
            <a href="/signup" class="underline mt-8 mx-auto ">Don't Have an Account?</a>
   
</div>
        
    </div>
        <style>
            body{
            background: url(img/loginbg.jpg); 
            background-size: cover;
            background-repeat: no-repeat;
    
         }
        .form{
            
    
    border-radius: 10px;
    backdrop-filter: blur(10px);
    background-color: rgba(255, 239, 239, 0.094);
    
  
        }
  .input-container {
    position: relative;
    margin: 20px 0;
}

.input {
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 10px;
    font-size: 16px;
    width: 250px;
    outline: none;
    
}

.input:focus {
    border-color: #fff;
}
.input-container .input{

}

.label {
    position: absolute;
    top: -25%;
    left: 4px;
    transform: translateY(-50%);
    font-size: 16px;
    color: #beb9b9;
    pointer-events: none;
    padding: 0px 5px;
    transition: all 0.2s ease-out;
}

.input:focus ~ .label,
.input:valid~label{
    top: -100%;
    left: 4px;
    font-size: 15px;
    background: rgba(255, 255, 250, 0);
    border: #ccc;
    color: #ecececee;
    z-index: 999;
}
      
    </style>
  
  {{#if wrongPassword}} 
<script>
    $(document).ready(function() {
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "3000"
        };
        toastr.error("{{wrongPassword}}");
    });
</script>
{{/if}} 
</body>

</html>